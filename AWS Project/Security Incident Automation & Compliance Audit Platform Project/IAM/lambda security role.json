{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3WriteLogs",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject"
      ],
      "Resource": "arn:aws:s3:::security-project-logs/*"
    },
    {
      "Sid": "PublishSNS",
      "Effect": "Allow",
      "Action": "sns:Publish",
      "Resource": "arn:aws:sns:ap-northeast-1:796796207962:security-incident-topic"
    },
    {
      "Sid": "BasicLogging",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "*"
    }
  ]
}